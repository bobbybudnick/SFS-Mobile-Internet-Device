#sleep 10 && /home/pi/PORTRAIT_MODE&

#set big.little to slower speeds
sudo sh -c "echo 'interactive' >> /sys/devices/system/cpu/cpufreq/policy0/scaling_governor"
sudo sh -c "echo 'interactive' >> /sys/devices/system/cpu/cpufreq/policy2/scaling_governor"

#do some custom led stuff
#this also signals when we are booted into xorg if the display is off for some reason
#we can use the other led for a notification light if needed
sudo sh -c "echo 'none' >> /sys/class/leds/sys_led/trigger"
sudo sh -c "echo 'heartbeat' >> /sys/class/leds/red_led/trigger"

