#then feed samsple.txt generated by export into lmtool
#then copy over lm and dict files into the appropriate place
#then ensure any pocketsphinx calls in AI_THREAD reference them
#this is to make pocketsphinx and ai dictionaries consistent

echo "Input name for entry into AI dictionary"

#read input into NAME variable
read -p "" NAME

NUMBER_OF_WORDS=$(echo $NAME | tr ' ' '\n' | wc -l)

echo ":$NAME:$NUMBER_OF_WORDS:.01:.50" >> ~/AI_DICTIONARY

